PROGRAM BINARY_OP_TEST
 VAR CONSTANT
  MAX_NUM : DWORD := DWORD#1000; (* przedzia³ obliczeñ 2..MAX_NUM *)
 END_VAR

 VAR
  i,s,f:DWORD;
  j : INT;
  buf : ARRAY [0..31] OF BOOL;
  start_time,stop_time : TIME;
  bcd: ARRAY [0..9] OF DINT;
  czas_obliczen : DINT;
  k,l : INT;
  err : BOOL;
 END_VAR

(* zasadnicza czêœæ testu - nie nale¿y modyfikowaæ *)
 start_time:=CUR_TIME();

 err:=FALSE;
 FOR i:=2 TO MAX_NUM DO
 
  f:=1;
  FOR j:=0 TO 31 DO
   IF (i AND f)<>DWORD#0 THEN buf[j]:=TRUE; 
    ELSE buf[j]:=FALSE;
   END_IF
    f:=SHL(f,1);
  END_FOR   
  s:=0; f:=1;
  FOR j:=0 TO 31 DO
    IF buf[j] THEN s:=(s OR f); END_IF
    f:=SHL(f,1);
  END_FOR
  IF s<>i THEN err:=TRUE; EXIT; END_IF 

  s:=0;
  FOR k:=0 TO 31 DO
   f:=i XOR i;
   f:=f XOR i;
   FOR j:=1 TO 31-k DO f:=SHR(f,1); END_FOR
   s:=SHL(s,1);
   IF (f AND DWORD#1)<>DWORD#0 THEN
    s:=s OR DWORD#1;
   END_IF  
  END_FOR
  IF s<>i THEN err:=TRUE; EXIT; END_IF
      
 END_FOR 
 stop_time:=CUR_TIME();
(************************************************************)

 czas_obliczen:=TIME_TO_DINT(stop_time - start_time);
 (* trzeba jakos wyprowadziæ tê zmienn¹... *)

END_PROGRAM

